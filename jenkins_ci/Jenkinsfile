MOLECULE_TEST_DATE = ''

pipeline { 
    agent any 
    environment {
        MOLECULE_TEST_DATE = getDate()
    }
    stages {
        stage("Structure of directories"){
            script {
                steps {
                    sh """tree \$PWD"""
                }
            }
        }
        stage("Molecule test"){
            steps {
                script {
                    if (secret_check){
                        sh """cd playbook/roles/elasticsearch-role"""
                        sh """molecule test"""
                    }
                    else{
                        echo "need more action"
                    }
                }
            }                        
        }                
    }

    post {
        script {
            sh """Bye!"""
        }
    }
}