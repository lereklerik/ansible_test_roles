pipeline { 
    agent {
        label 'docker'
    } 
    stages {
        stage('Structure of directories'){
            steps {
                sh 'ls -l \$PWD'
            }
        }
        stage('Molecule test'){
            steps {
                dir('playbook/roles/elasticsearch-role') {
                    sh 'cd playbook/roles/elasticsearch-role && molecule test'
                }                
            }                        
        }                
    }
}